{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "sourceMap": false,
    "listFiles": true,
    "removeComments": false,
    "noEmitHelpers": false,
    "outDir": "build",
    "noLib": false,
    "baseUrl": ".",
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "hammerjs",
      "jasmine",
      "node",
      "webpack",
      "jquery"
    ]
  },
  "exclude": [
    "node_modules",
    "build",

    "test",
    "demo",

    "index.ts",
    "ng2-fullpage.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
